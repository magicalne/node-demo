extends layout

block content
  div(ng-controller="PhoneListCtrl")
    ul
      li(ng-repeat="phone in phones")
        span {{phone.name}}
        p {{phone.snippet}}
    p Total number of phones: {{phones.length}}
    p Hello, {{name}}
    
    table
      tr
        th row number
      tr(ng-repeat="i in [0, 1, 2, 3, 4, 5, 6, 7]")
        td {{i + 1}}